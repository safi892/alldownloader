{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "dialog:default",
    "clipboard-manager:default",
    "clipboard-manager:allow-read-text",
    "notification:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "bin/yt-dlp",
          "sidecar": true,
          "args": true
        },
        {
          "name": "bin/ffmpeg",
          "sidecar": true,
          "args": true
        },
        {
          "name": "bin/ffprobe",
          "sidecar": true,
          "args": true
        },
        {
          "name": "open",
          "cmd": "open",
          "args": true
        },
        {
          "name": "explorer",
          "cmd": "explorer",
          "args": true
        },
        {
          "name": "xdg-open",
          "cmd": "xdg-open",
          "args": true
        }
      ]
    }
  ]
}