{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "VidFlow",
  "version": "0.1.3",
  "identifier": "com.macbookpro.vidflow-desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "VidFlow",
        "width": 1200,
        "height": 810,
        "minWidth": 900,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "macOS": {
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "bin/yt-dlp",
      "bin/yt-dlp-wrapper",
      "bin/ffmpeg",
      "bin/ffprobe"
    ]
  }
}